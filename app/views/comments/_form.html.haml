.ly-comments
  = form_for @comment do |f|
    - if @comment.errors.any?
      #error_explanation
        %h2= "#{pluralize(@comment.errors.count, "error")} prohibited this comment from being saved:"
        %ul
          - @comment.errors.full_messages.each do |message|
            %li= message

    .field.is-hidden
      = f.label :user_id
      = f.hidden_field :user_id
    .field.is-hidden
      = f.label :lesson_id
      = f.hidden_field :lesson_id
    .field
      = f.label :body, "回答を書く"
      = f.text_area :body
    %p
      = f.label :commentimage, "回答に添付する参考画像を選択"
      = f.file_field :commentimage
    .actions
      = f.submit '質問に回答する', class: "mod-submit about-lesson-show"
