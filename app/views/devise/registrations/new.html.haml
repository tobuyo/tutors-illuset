.ly-registration
  %h2 会員登録する
  .login-contents.is-left
    = form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|
      = devise_error_messages!  

      .field
        = f.label :username, "ユーザー名"
        %br/
        = f.text_field :username, autofocus: true, placeholder: "ユーザー名を入力", class: "mod-inputs registration-characters"
      .field
        = f.label :email, "メールアドレス"
        %br/
        = f.email_field :email, autofocus: true, placeholder: "メールアドレスを入力", class: "mod-inputs registration-characters"
      .field
        = f.label :password, "パスワード"
        - if @minimum_password_length
          %em
            (#{@minimum_password_length} 文字以上
        %br/
        = f.password_field :password, autocomplete: "off", placeholder: "パスワードを入力", class: "mod-inputs registration-characters"
      .field
        = f.label :password_confirmation, "(確認)パスワードを入力"
        %br/
        = f.password_field :password_confirmation, autocomplete: "off", placeholder: "パスワードを入力", class: "mod-inputs registration-characters"
      .field
        = f.file_field :image
      .actions
        = f.submit "会員登録する", class: "mod-button"
  .login-contents.is-right
    = render "devise/shared/links"
    = image_tag "new-lesson-picture.png", class: "brand-new-image"
