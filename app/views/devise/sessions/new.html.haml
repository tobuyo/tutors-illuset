.ly-login
  %h2 ログイン
  .login-contents.is-left
    = form_for(resource, as: resource_name, url: session_path(resource_name)) do |f|
      .field
        = f.label :email, "メールアドレス"
        %br/
        = f.email_field :email, autofocus: true, placeholder: "メールアドレスを入力", class: "mod-inputs login-characters"
      .field
        = f.label :password, "パスワード"
        %br/
        = f.password_field :password, autocomplete: "off", placeholder: "パスワードを入力", class: "mod-inputs login-characters"
      - if devise_mapping.rememberable?
        .field.remember
          = f.check_box :remember_me
          = f.label :次回以降省略する, class: "login-characters"
      .actions
        = f.submit "ログイン", class: "mod-button"
  .login-contents.is-right
    = render "devise/shared/links"
