!!!
%html
  %head
    %meta{:content => "text/html; charset=UTF-8", "http-equiv" => "Content-Type"}/
    %title Tutors
    = csrf_meta_tags
    = stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload'

    = javascript_include_tag 'application', 'data-turbolinks-track': 'reload'
  %body
    %header.ly-header
      %img.tutors-logo{:src => "assets/tutors_logo.png"}/
      = image_tag current_user.image.url, class: "header-image-picture"
      %p.header-to-mypage= link_to "マイページ", user_path(current_user)
      - if user_signed_in?
        %p= link_to "ログアウト", destroy_user_session_path, method: :delete
        %p.notice= notice
        %p.alert= alert
= yield
