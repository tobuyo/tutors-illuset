%html
  %head
    %meta{:charset => "utf-8"}/
    %meta{:content => "ie=edge", "http-equiv" => "x-ua-compatible"}/
    %meta{:content => "width=910", :name => "viewport"}/
    %meta{:content => "TUTORS, 添削", :name => "keywords"}/
    %meta{:content => "TUTORSでイラスト・絵画に関する質問をしよう！", :name => "description"}/
    %meta{:content => "TUTORS", :property => "og:site_name"}/
    %meta{:content => "TUTORSでイラスト上達！", :property => "og:title"}/
    %meta{:content => "", :property => "og:image"}/
    %meta{:content => "TUTORSでイラスト・絵画に関する質問をしよう！", :property => "og:description"}/
    %meta{:content => "website", :property => "og:type"}/
    %meta{:content => "https://tutors-illust.herokuapp.com/", :property => "og:url"}/
    %link{:href => "../images/common/favicon.ico", :rel => "icon", :type => "image/x-icon"}/
    / Use the title from a page's frontmatter if it has one

    %meta{:content => "text/html; charset=UTF-8", "http-equiv" => "Content-Type"}/
    %title PENTERS
    = csrf_meta_tags
    %link{href: "https://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css", rel: "stylesheet", integrity: "sha384-wvfXpqpZZVQGK6TAh5PVlGOfQNHSoD2xbE+QkPxCAFlNEevoEH3Sl0sibVcOQVnN", crossorigin: "anonymous"}
    = stylesheet_link_tag    'application', media: 'all'
    %script{:src => "https://code.jquery.com/jquery-3.2.1.min.js", :type => "text/javascript"}

  %body
    %header.ly-header
      .inner
        = link_to root_path do
          %img.tutors-logo{:src => "https://s3-ap-northeast-1.amazonaws.com/tutors-upload-test/assets-images/tutors_logo.png"}/
        = search_form_for @search, html: { class: 'search-form' }, url: lessons_path do |f|
          = f.text_field :title_cont, class: "search-text"
          = f.submit "検索", class: "search-submit"

        = link_to edit_user_registration_path do
          %i.fa.fa-cog.mod-header-buttons.is-circled
        = link_to user_path(current_user) do
          %i.fa.fa-user-circle.mod-header-buttons
        = link_to user_path(current_user) do
          %i.fa.fa-star-o.mod-header-buttons.is-circled
        = link_to user_path(current_user) do
          %i.fa.fa-comment-o.mod-header-buttons.is-circled



        / - if user_signed_in?
        /   %p= link_to "ログアウト", destroy_user_session_path, method: :delete
        /   %p.notice= notice
        /   %p.alert= alert

    = yield

    .ly-footer
      .footer-contents
        %p サイトマップ
        = link_to "TOPページ", root_path, class: "mod-contents-link"
        = link_to "マイページ", user_path(current_user), class: "mod-contents-link"
        = link_to "添削希望", root_path, class: "mod-contents-link"
        = link_to "赤ペン", root_path, class: "mod-contents-link"
        = link_to "レポート", root_path, class: "mod-contents-link"
        = link_to "投稿する", root_path, class: "mod-contents-link"
        = link_to "TOPページ", root_path, class: "mod-contents-link"

      .footer-rights @2017 PENTER.


    = javascript_include_tag 'application'
