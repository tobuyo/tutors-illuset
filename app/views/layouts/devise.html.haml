    %link{href: "https://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css", rel: "stylesheet", integrity: "sha384-wvfXpqpZZVQGK6TAh5PVlGOfQNHSoD2xbE+QkPxCAFlNEevoEH3Sl0sibVcOQVnN", crossorigin: "anonymous"}
    = stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload'


  %body
    %a.always-fix-tensaku{src: "#"}
      %header.ly-header
        .inner
          = link_to root_path do
            %img.tutors-logo{:src => "https://s3-ap-northeast-1.amazonaws.com/tutors-upload-test/assets-images/tutors_logo.png"}/
          - if user_signed_in?
            = form_tag user_path(current_user), :method => 'get' ,class: "header-form" do
              %p
              = text_field_tag :search, params[:search]
              = submit_tag "Search", :name => nil  


    = yield

    .ly-footer

      .footer-rights @2017 PENTER.

    %script{src: "https://code.jquery.com/jquery-3.2.1.min.js"}

    = javascript_include_tag 'application', 'data-turbolinks-track': 'reload'
